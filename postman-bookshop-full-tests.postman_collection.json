        "url": "{{baseUrl}}/api/v1/books"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 201', function () { pm.response.to.have.status(201); });",
              "const data = pm.response.json();",
              "pm.test('Book has id and nested objects', function () {",
              "  pm.expect(data.id).to.be.a('number');",
              "  pm.expect(data.author).to.be.an('object');",
              "  pm.expect(data.publisher).to.be.an('object');",
              "});",
              "pm.collectionVariables.set('bookId', data.id);"
            ]
          }
        }
